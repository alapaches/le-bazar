{% extends 'base.html.twig' %}

{% block title %}Piece index{% endblock %}

{% block body %}
    <div class="col-3">
        <h1>Liste des pièces</h1>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr>
                <td>{{ piece.nom }}</td>
                <td>
                    <a href="{{ path('piece_edit', {'id': piece.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucune donnée à afficher</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" role="button" href="{{ path('piece_new') }}">Créer une pièce</a>
{% endblock %}
